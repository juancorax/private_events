<% if user_signed_in? %>
  <%= link_to "My Events", user_path(current_user.id) %>
<% end %>

<% if @past_events.any? || @upcoming_events.any? %>
  <h1>Events</h1>

  <% if @upcoming_events.any? %>
    <h2>Upcoming Events</h2>

    <ul>
      <% @upcoming_events.each do |event| %>
        <%= render partial: "shared/event", locals: { event: event } %>
      <% end %>
    </ul>
  <% end %>

  <% if @past_events.any? %>
    <h2>Past Events</h2>

    <ul>
      <% @past_events.each do |event| %>
        <%= render partial: "shared/event", locals: { event: event } %>
      <% end %>
    </ul>
  <% end %>

<% else %>
  <h1>No events yet...</h1>
<% end %>
