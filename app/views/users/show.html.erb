<%= link_to "Home", root_path %><br>
<%= link_to "Create Event", new_event_path %>

<% if @created_events.any? %>
  <h1>Created Events</h1>

  <ul>
    <% @created_events.each do |event| %>
      <%= render partial: "shared/event", locals: { event: event } %>
    <% end %>
  </ul>

<% else %>
  <h1>You haven't created any events yet...</h1>
<% end %>

<% if @attended_past_events.any? || @attended_upcoming_events.any? %>
  <h1>Attended Events</h1>

  <% if @attended_upcoming_events.any? %>
    <h2>Upcoming Events</h2>

    <ul>
      <% @attended_upcoming_events.each do |event| %>
        <%= render partial: "shared/event", locals: { event: event } %>
      <% end %>
    </ul>
  <% end %>

  <% if @attended_past_events.any? %>
    <h2>Past Events</h2>

    <ul>
      <% @attended_past_events.each do |event| %>
        <%= render partial: "shared/event", locals: { event: event } %>
      <% end %>
    </ul>
  <% end %>

<% else %>
  <h1>You haven't decided to attend any events yet...</h1>
<% end %>
