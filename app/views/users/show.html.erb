<% unless @user_created_events.empty? %>
  <h1>Created Events</h1>

  <ul>
    <% @user_created_events.each do |event| %>
      <li>
        <%= link_to event_path(event.id) do %>
          <%= event.title %><br>
          <%= event.body %><br>
          <%= event.date %><br>
          <%= event.location %><br>
          <%= "Attendees: #{event.attendees.size}" %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h1>You haven't created any events yet...</h1>
<% end %>

<% unless @user_attended_events.empty? %>
  <h1>Attended Events</h1>

  <% @user_attended_events.each do |event| %>
    <% if DateTime.current.before?(event.date) %>
      <h2>Upcoming Events</h2>

      <ul>
        <li>
          <%= link_to event_path(event.id) do %>
            <%= event.title %><br>
            <%= event.body %><br>
            <%= event.date %><br>
            <%= event.location %><br>
            <%= "Attendees: #{event.attendees.size}" %>
          <% end %>
        </li>
      </ul>
    <% end %>

    <% if DateTime.current.after?(event.date) %>
      <h2>Past Events</h2>

      <ul>
        <li>
          <%= link_to event_path(event.id) do %>
            <%= event.title %><br>
            <%= event.body %><br>
            <%= event.date %><br>
            <%= event.location %><br>
            <%= "Attendees: #{event.attendees.size}" %>
          <% end %>
        </li>
      </ul>
    <% end %>
  <% end %>

<% else %>
  <h1>You haven't decided to attend any events yet...</h1>
<% end %>
